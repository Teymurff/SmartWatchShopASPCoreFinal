@model HomePageVM
@{
    ViewData["Title"] = "Create";
}
<div class="page-wrapper" style="min-height:304px">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="ProductPhoto"></label>
                        <input type="file" multiple name="ProductPhotos" id="ProductPhoto" class="form-control" />
                        <span asp-validation-for="Image.ProductPhoto" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.Name"></label>
                        <input asp-for="Product.Name" class="form-control">
                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.Price"></label>
                        <input asp-for="Product.Price" class="form-control">
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>
                    <div class="form-check form-check-inline mb-5">
                        <label asp-for="Product.HasDiscount" class="form-check-label"></label>
                        <input asp-for="Product.HasDiscount" class="form-check-input ml-5" style="width:20px;height:20px;" type="checkbox">
                        <span asp-validation-for="Product.HasDiscount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.DiscountedPrice"></label>
                        <input asp-for="Product.DiscountedPrice" class="form-control">
                        <span asp-validation-for="Product.DiscountedPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.Color"></label>
                        <input asp-for="Product.Color" class="form-control">
                        <span asp-validation-for="Product.Color" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.Availability"></label>
                        <input asp-for="Product.Availability" class="form-control">
                        <span asp-validation-for="Product.Availability" class="text-danger"></span>
                    </div>
                    <div class="form-check form-check-inline mb-5">
                        <label asp-for="Product.InStock" class="form-check-label"></label>
                        <input asp-for="Product.InStock" class="form-check-input ml-5" style="width:20px;height:20px;" type="checkbox">
                        <span asp-validation-for="Product.InStock" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.BrandId">Brand</label>
                        <select class="form-control" asp-for="Product.BrandId" asp-items="ViewBag.Brands as SelectList"></select>
                        <span asp-validation-for="Product.BrandId" class="text-danger"></span>
                    </div>
                    <input type="submit" class="btn btn-info btn-lg btn-block" value="Submit" />
                </form>
                <a asp-action="Index" class="btn btn-secondary btn-block btn-lg mt-3">Back to Index</a>
            </div>
        </div>
    </div>
</div>

@section scripts
    {
    <script src="https://kit.fontawesome.com/f28891363d.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}