@model HomePageVM
@{
    ViewData["Title"] = "Delete";
}

<div class="page-wrapper" style="min-height:304px">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="form-group my-3">
                        <label>Image</label>
                        @foreach (var items in Model.Images)
                        {
                            if (Model.Product.Id == items.ProductId)
                            {
                                <img class="ml-5" src="~/images/@items.ProductImage" width="200" />
                            }
                        }
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.Name"></label>
                        <input asp-for="Product.Name" readonly class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.Price"></label>
                        <input asp-for="Product.Price" readonly class="form-control">
                    </div>
                    <div class="form-check form-check-inline mb-5">
                        <label asp-for="Product.HasDiscount" class="form-check-label"></label>
                        <input asp-for="Product.HasDiscount" class="form-check-input ml-5" style="width:20px;height:20px;" type="checkbox" disabled>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.DiscountedPrice"></label>
                        <input asp-for="Product.DiscountedPrice" readonly class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.Color"></label>
                        <input asp-for="Product.Color" readonly class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.Availability"></label>
                        <input asp-for="Product.Availability" readonly class="form-control">
                    </div>
                    <div class="form-check form-check-inline mb-5">
                        <label asp-for="Product.InStock" class="form-check-label"></label>
                        <input asp-for="Product.InStock" class="form-check-input ml-5" style="width:20px;height:20px;" type="checkbox" disabled>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.Brand.Name">Brand Name</label>
                        <input asp-for="Product.Brand.Name" readonly class="form-control">
                    </div>
                    <div class="alert alert-dark">
                        Product will be deleted permamently. Are you sure?
                    </div>

                    <input type="submit" class="btn btn-info btn-lg btn-block" value="Delete" />
                </form>

                <a asp-action="Index" class="btn btn-secondary btn-block btn-lg mt-3">Back to Index</a>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script src="https://kit.fontawesome.com/f28891363d.js"></script>
}


